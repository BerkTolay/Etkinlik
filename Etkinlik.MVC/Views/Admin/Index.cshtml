
@{
    ViewData["Title"] = "Index";
}
<h2>Onay Bekleyen Aktiviteler</h2>
@model List<ActivityViewModel>
<div class="col-md-10">
    <table class="table table-bordered table-striped">
        <tr>
            <td>User Name</td>
            <td>Email</td>
            <td>Şifre Değiştir</td>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3">Onay Bekleyen Aktivite yok</td>
            </tr>
        }

        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CityName</td>
                    <td><a class="btn btn-danger" asp-action="Accept" asp-controller="Admin" asp-route-id="@item.Id">Onayla</a></td>
                    <td><a class="btn btn-danger" asp-action="Reject" asp-controller="Admin" asp-route-id="@item.Id">Red</a></td>
                </tr>
            }
        }

    </table>
</div>